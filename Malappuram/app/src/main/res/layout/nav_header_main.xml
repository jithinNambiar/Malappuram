<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/golden_yellow"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:layout_weight="2"
    android:paddingTop="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/profile"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="3dp">
        <TextView
            android:id="@+id/tv_login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:text="Viewing as Guest"
            android:textColor="@color/trans_black"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/tv_sign_in_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textColor="@color/trans_black"
            android:drawablePadding="2dp"
            android:layout_below="@+id/tv_login_name"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:drawableRight="@drawable/location"
            android:textColor="@color/trans_black"
            android:drawablePadding="2dp"
            android:layout_below="@+id/tv_sign_in_label"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>
