<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.myworks.jithin.malappuram.itemList.ListActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <RelativeLayout
            android:id="@+id/rlListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_listView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/iv_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ImageButton
                    android:id="@+id/favourite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/favourite_white"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <com.myworks.jithin.malappuram.util.custom_textview.CustomTextBold
                android:id="@+id/tvListItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_listView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/listItemName" />

            <Button
                android:id="@+id/btGetDetails"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_below="@id/tvListItemName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/app_red"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:text="@string/getItemDetails" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
